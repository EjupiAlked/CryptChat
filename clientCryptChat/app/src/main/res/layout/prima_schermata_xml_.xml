<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="100dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cryptChat.clientCryptChat.primaSchermata_mainActivity"
    android:background="#883737"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"


            android:layout_height="167dp"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:layout_margin="5dp"
            android:text="by Ejupi Alked"
            android:textSize="19dp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_ip"
            style="@style/editText_style"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
android:imeOptions="actionDone"
            android:hint="Indirizzo ip"
            />

        <EditText
            android:id="@+id/txt_porta"
            style="@style/editText_style"
            android:imeOptions="actionDone"
            android:ems="10"
            android:gravity="center"
            android:hint="Porta"
            android:textStyle="bold"
            android:text=""
             />

        <Button
            android:id="@+id/btn_connetti"
            style="@style/button_style"
            android:text="Connetti"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
